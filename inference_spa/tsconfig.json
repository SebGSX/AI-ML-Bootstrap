{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "InferenceSPA/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "vitest.config.ts", "vitest.setup.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
